<Window x:Class="PopTilesWpf.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Window1" x:Name="SplashWindow" Height="100" Width="200">
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="giphy.gif" Opacity="0.3" Stretch="Fill"/>
        <Label x:Name="SplashWinLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="36" Background="{x:Null}">Perfect</Label>
    </Grid>
</Window>
